<Window x:Class="TheDebtBook.Views.PersonDebt"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TheDebtBook.Views"
        mc:Ignorable="d"
        Title="PersonDebt" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <DataGrid ItemsSource="{Binding Path=Debt}"
                  AutoGenerateColumns="False"
                  Grid.Row="1"
                  Margin="15"
                  BorderBrush="DarkKhaki"
                  BorderThickness="3"
                  GridLinesVisibility="All"
                  
                  
                  
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  CanUserSortColumns="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Tidspunkt" Binding="{Binding Date}" Width="*"/>
                <DataGridTextColumn Header="Beløb" Binding="{Binding Amount}" Width="2*"/>
            </DataGrid.Columns>
        </DataGrid>


        <Label Content="{Binding Name}"
               FontSize="25"
            />

        <Label Content="Nuværende gæld:"
               Grid.Row="1"
               Grid.Column="1"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               FontSize="25"
               Margin="10"/>

        <Label Content="{Binding TotalDebt}"
               Grid.Row="1"
               Grid.Column="1"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               Width="150"
               Height="25"
               Margin="0,210"
               
               />

        <Label Content="Indsæt Beløb:"
               Grid.Row="1"
               Grid.Column="1"
               VerticalAlignment="Top"
               HorizontalAlignment="Center"
               FontSize="25"
               Margin="10"
               />

        <TextBox Text="{Binding Debt, UpdateSourceTrigger=PropertyChanged}"
                 Grid.Row="1"
                 Grid.Column="1"
                 Height="23"
                 Width="150"
                 HorizontalAlignment="Center"
                 VerticalAlignment="Top"
                 Margin="0,50"
                 />

        <Button IsCancel="True"
                Content="Annuller"
                Grid.Row="2"
                Margin="5"
                Width="150"
                />

        <Button Command="{Binding AddDebt}"
                Content="Tilføj gæld"
                Grid.Row="2"
                Grid.Column="1"
                Width="150"
                Margin="5"
                />


    </Grid>
</Window>
